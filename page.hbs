{{!< default}}

{{!-- This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
        <a class="home-button" href="/"><i class="material-icons icon">keyboard_arrow_left</i></a>
        <img class="logo--mobile-centered" src="{{asset "images/logo.png"}}" alt="logo" />
        {{#if @blog.navigation}}
             <a href="#" data-activates="slide-out" class="nav__menu-toggle--post"><i class="material-icons icon">menu</i></a>
        {{/if}}
    </nav>
    <div class="post-bg-adjust"></div> 
        <div class="post-adjust">
            <div class="post-data">
                <header class="post-header">
                    <h2 class="post-title">{{title}}</h2>
                </header>
                <footer class="post-meta">
                    <div style="display: none;">
                        {{author}} | 
                    </div>
                    <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                    <div class="tags-content">
                        {{tags separator=" "}}
                    </div>
                </footer>
            </div>
        </div>
</header>

<main class="content" role="main">
    <article class="{{post_class}}">

        <section class="post-content">
            {{content}}
        </section>

    </article>
</main>
{{/post}}
